<p>
  <%= image_tag @article.image.url, height: 'auto', width: '100px' %>
</p>
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
<p>
  <strong>Tags:</strong>
  <%= @article.tags.join(' ') %>
</p>
<p>
  <strong>User:</strong>
  <%= @article.user.email %>
</p>
<p>
  <strong>Likes:</strong>
  <%= @article.likes.count %>
</p>
<p>
  <% if @user_like.nil?%>
    <%= link_to '+1', add_like_article_path(@article), method: :post %>
  <% end %>
</p>
<p>
  <%= link_to 'Edit', edit_article_path(@article) %>
  <%= link_to 'Back', articles_path %>
</p>

<h2>Comments</h2>
<button type="button" id="comments-button" class="btn btn-primary" value="primary">Show comments</button>
<div class="comments hided-comments" id="article-comments">
  <%= render @article.comments.order(created_at: :desc) %>
</div>
<%= render 'comments/form' %>
