<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
<p>
  <strong>Tags:</strong>
  <%= @article.tags.join(' ') %>
</p>
<p>
  <strong>User:</strong>
  <%= @article.user.email %>
</p>
<p>
  <strong>Likes:</strong>
  <%= @article.likes.count %>
</p>
<p>
  <% if @user_like.nil?%>
    <%= link_to '+1', add_like_article_path(@article), method: :post %>
  <% end %>
</p>
<p>
  <%= link_to 'Edit', edit_article_path(@article) %>
  <%= link_to 'Back', articles_path %>
</p>
<h2>Comments</h2>
<%= render @article.comments.order(created_at: :desc) %>

<%= render 'comments/form' %>
