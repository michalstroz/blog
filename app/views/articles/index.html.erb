<h1>Listing articles</h1>

<p>
<%= link_to 'New Article', new_article_path %>
</p>

<table class="table table-hover">
  <tr>
    <th>Id</td>
    <th>Created at</th>
    <th>Title</th>
    <th></th>
    <th colspan="2"></th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= article.created_at.to_date %></td>
      <td><%= article.title %></td>
      <td><%= link_to 'Show', article_path(article), class: "btn btn-success"%></td>
      <td><%= link_to 'Seek And Destroy', article_path(article),
                                          method: :delete,
                                          data: { confirm: 'Are you sure' },
                                          class: "btn btn-danger"%>
                                        </td>
      <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-primary"%></td>
    </tr>
  <% end %>
</table>
